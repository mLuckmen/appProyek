        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QRCodeScannerActivity"></activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".SuccessRegisterActivity" />
        <activity android:name=".RegisterTwoActivity" />
        <activity android:name=".RegisterOneActivity" />
        <activity android:name=".GetStartedActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>